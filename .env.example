# FastAPI Template Environment Configuration
# Copy this file to .env and configure with your actual values

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=fastapi-template
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=DEBUG

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_TYPE=postgresql
POSTGRES_DB=fastapi_dev
POSTGRES_PASSWORD=postgres

# For production, use DATABASE_URL_FILE pointing to Docker secret
# DATABASE_URL=postgresql://postgres:password@postgres:5432/fastapi_dev

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=redis123

# For production, use REDIS_URL_FILE pointing to Docker secret
# REDIS_URL=redis://:password@redis:6379

# =============================================================================
# Security Configuration
# =============================================================================
# Use strong, unique values in production
INTERNAL_API_KEYS=dev_api_key
WEBHOOK_SECRET=dev_webhook_secret
RATE_LIMIT_REQUESTS_PER_MINUTE=300

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080
CORS_CREDENTIALS=true

# =============================================================================
# Observability Configuration
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false
TRACING_ENDPOINT=

# =============================================================================
# Container Registry (for production builds)
# =============================================================================
REGISTRY=ghcr.io
IMAGE_NAME=your-org/fastapi-template
IMAGE_TAG=latest

# =============================================================================
# Optional Services (use profiles to enable)
# =============================================================================
# Profiles: tools, monitoring, nginx
# docker-compose --profile tools up    # Enables pgAdmin and Redis Commander
# docker-compose --profile monitoring up   # Enables Grafana
# docker-compose --profile nginx up    # Enables Nginx reverse proxy
