# FastAPI Template Environment Configuration
# Copy this file to .env and customize for your environment

# Core Application Settings
APP_NAME=fastapi-template
ENVIRONMENT=development
DEBUG=true
TIMEZONE=UTC

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE="FastAPI Template"
API_DESCRIPTION="A clean architecture FastAPI template"
API_VERSION=1.0.0

# Database Settings (SQLite for template - replace with your database)
DATABASE_URL=sqlite:///./template.db
DATABASE_ECHO_QUERIES=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Security Settings
SECURITY_API_KEYS=["your-api-key-here", "another-api-key"]
SECURITY_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
SECURITY_RATE_LIMIT_REQUESTS_PER_MINUTE=100
SECURITY_WEBHOOK_SECRET=your-webhook-secret-here

# Observability Settings
OBSERVABILITY_LOG_LEVEL=INFO
OBSERVABILITY_LOG_FORMAT=structured
OBSERVABILITY_METRICS_ENABLED=true
OBSERVABILITY_METRICS_PORT=9090
OBSERVABILITY_HEALTH_CHECK_ENABLED=true
OBSERVABILITY_HEALTH_CHECK_TIMEOUT=5.0

# Feature Flags
FEATURE_FLAGS_NEW_USER_ONBOARDING_ENABLED=true
FEATURE_FLAGS_ADVANCED_SEARCH_ENABLED=false
FEATURE_FLAGS_EMAIL_NOTIFICATIONS_ENABLED=true
FEATURE_FLAGS_SMS_NOTIFICATIONS_ENABLED=false
FEATURE_FLAGS_PUSH_NOTIFICATIONS_ENABLED=false

# External Services (Configure as needed)
EXTERNAL_SERVICES_EMAIL_SERVICE_ENABLED=false
EXTERNAL_SERVICES_EMAIL_SERVICE_API_KEY=
EXTERNAL_SERVICES_EMAIL_FROM_ADDRESS=noreply@example.com

EXTERNAL_SERVICES_SMS_SERVICE_ENABLED=false
EXTERNAL_SERVICES_SMS_SERVICE_API_KEY=

EXTERNAL_SERVICES_ANALYTICS_ENABLED=false
EXTERNAL_SERVICES_ANALYTICS_API_KEY=

# Production Environment Variables (examples)
# Uncomment and set for production deployment:
# ENVIRONMENT=production
# DEBUG=false
# DATABASE_URL=postgresql://user:password@localhost:5432/your_database
# SECURITY_API_KEYS=["your-production-api-key"]
# SECURITY_WEBHOOK_SECRET=your-production-webhook-secret
